[user]
    name = Nathan Musoke
    email = nathan.musoke@gmail.com
[push]
    default = simple
[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    brm = branch --no-merge
    wdiff = diff --color-words
    dc = diff --cached

    l = log
    lp = log --patch
    lpw = log --patch --color-words

[merge]
    ff = false
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
[color]
    ui = auto

[diff "gpg"]
    textconv = "gpg -d -q --batch --no-tty $1 || cat $1"

[filter "encrypt"]
    smudge = "gpg -d -q --batch --no-tty || cat"
    clean = "gpg -ea -q --batch --no-tty --hidden-recipient 0x385B75C7327E99DC"
[diff "encrypt"]
    textconv = "gpg -d -q --batch --no-tty $1 || cat $1"
